/*
 *Function: Adding_matrices
 *----------------
 * Returns addition of two matrices
 * 
 * number of rows is asked
 * number of columns is asked
 * 
 * matrix 1
 * matrix 2
 * 
 * returns: additions of two matrices
 */
  
#include <stdio.h>

int main(void)
{
  int c, d, a[10][10], b[10][10], total[10][10], rows, columns;
  
  //Asks the number of rows for the matrices
  printf("Enter number of rows: \n");
  scanf("%d", &rows);
  //ASks the number of columns for the matrices
  printf("Enter number of columns: \n");
  
  scanf("%d", &columns);

  // Asks the user for the first matrix numbers
  printf("Enter first matrix:\n");
   for (c = 0; c < rows; c++)
      for (d = 0 ; d < columns; d++)
         scanf("%d", &a[c][d]);
  
// Asks the usr for the second matrix nubmers
  printf("Enter second matrix: \n");
   for (c = 0; c < rows; c++)
      for (d = 0 ; d < columns; d++)
         scanf("%d", &b[c][d]);

// Adds together the matrices together
  printf("Addition of the matrices: \n");
    for (c=0; c<columns; c++)
      for (d=0; d<columns; d++) {
        
      }
    {
      total[c][d]= a[c][d]+b[c][d];
      printf("%d\t", &total[c][d]);
    }
    printf("\n");

  return 0;
}